<div style="text-align: center; margin-top: 70px">
	<%= form_for(@mail) do |f| %>
		<% if @mail.errors.any? %>
		    <div id="error_explanation">
		      <h2><%= pluralize(@mail.errors.count, "error") %> prohibited this post from being saved:</h2>

		      <ul>
		      <% @mail.errors.full_messages.each do |message| %>
		        <li><%= message %></li>
		      <% end %>
		      </ul>
		    </div>
		<% end %>
		<%= f.email_field :email, autofocus: true, required: true %>

		<div class="field">
			<%= f.text_area :exercise, :cols => 30, :rows => 5 %>
		</div>
		<br />

		<%= button_tag(type: 'submit', class: "ladda-button", 'data-style' => "zoom-out", :style=> "font-family: 'Montserrat', Arial, Helvetica, sans-serif;
	        border-radius: 10px;
	        width: 300px;
	        border: #fbfbfb solid 4px;
	        cursor:pointer;
	        background-color: #3498db;
	        color:white;
	        font-size:24px;
	        padding-top:8px;
	        padding-bottom:8px;
	        -webkit-transition: all 0.3s;
	        -moz-transition: all 0.3s;
	        transition: all 0.3s;
	          margin-top:-4px;
	          font-weight:100;") do %>
	        <span class="ladda-label">Submit</span>
	    <% end %>
	<% end %>
</div>