<% if user_signed_in? %>
  <div class="container-header">
  <div class="container">
    <a href="/" style="text-decoration: none"><h1 id="writersmob">WritersMob</h1></a>
    <ul class="menu">
      <li>
        <%= link_to('Daily Challenge', daily_challenge_path, 'data-no-turbolink' => true, :style => "text-decoration: underline; font-size: 18px") %>
      </li> 
      <li>
        <%= link_to('History', my_history_path, 'data-no-turbolink' => true, :style => "text-decoration: underline; font-size: 18px") %>
      </li>
      
     
    </ul>
    
    <div class="right-menu">
      <li><%= link_to('Profile and settings', my_profile_path, 'data-no-turbolink' => true) %></li>
      <li><%= link_to('Logout', destroy_user_session_path, :method => :delete, 'data-no-turbolink' => true) %></li>       
    </div>
  </div>
</div>
<% else %>
  <li style="float: right; list-style-type: none; margin-left: 20px;">
    <%= link_to('Login', new_user_session_path, 'data-no-turbolink' => true)  %>  
  </li>
  
<% end %>
<div class="exercise-title row">
	<div class="highlight" style="margin: auto; text-align: left; width: 292px; line-height:28px; width: 638px;"><%= @challenge.exercise %>
	</div>
</div>

<div class="row">
	<div id="response_response_count" style="display:none; text-align: right; color: #CEC7C5; width: 55%;" class="col-md-6"></div>
</div>

