<% if user_signed_in? %>
  <div class="container-header">
  <div class="container">
    <a href="/" style="text-decoration: none"><h1 id="writersmob">WritersMob</h1></a>
    <ul class="menu">
      <li>
        <%= link_to('Daily Challenge', daily_challenge_path, 'data-no-turbolink' => true, :style => "font-size: 18px; font-family: PTMono-Regular; font-size: 18px; text-decoration: underline; ") %> 
      </li> 
      <li>
        <%= link_to('History', my_history_path, 'data-no-turbolink' => true, :style => "text-decoration: underline; font-size: 18px") %>
      </li>
      
     
    </ul>
    
    <div class="right-menu">
      <div class="container-fluid">
        <div class="nav-collapse" style="float:right">
          <ul class="nav">
            <li class="dropdown">
              <a data-toggle="dropdown" class="dropdown-toggle" href="#"><%= image_tag(@profile.image.url(:small), :style => "border-radius: 50%; width: 50px; height: 50px", :class => "missing_photo") %> <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li style="float: right; list-style-type: none; margin-left: 20px;" class="trigger">
                  <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>        
                </li>
                <li>
                  <%= link_to('Profile and settings', my_profile_path, 'data-no-turbolink' => true) %>
                </li>
              </ul>
            </li>
          </ul>
        </div>
      </div>  
    </div>
  </div>
</div>
<% else %>
  <li style="float: right; list-style-type: none; margin-left: 20px;">
    <%= link_to('Login', new_user_session_path, 'data-no-turbolink' => true)  %>  
  </li>
  
<% end %>
<div class="container-header">
  <div class="container">
  
    <div style="font-family: PTMono-Regular;
      font-size: 18px;
      position: absolute;
      text-align: center;
      top: 55px;
      margin-left: 171px;
      text-decoration: underline">
      <%= link_to "Personal Profile", my_profile_path(@user) %>
    </div>
    <div style="font-family: PTMono-Regular;
      font-size: 18px;
      color: #808080;
      line-height: 36px;
      -webkit-border-radius: 5px;
      -moz-border-radius: 5px;
      border-radius: 5px;
      border: 1px solid;
      padding: 8px 10px 8px 10px;
      text-decoration: none;
      width: 18%; 
      position: absolute;
      top: 105px;
      text-align: center; margin-left: 153px;">
      Account Settings
    </div>
   
  </div>
    
</div>
<div class="center-div">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, :style => "border-left: 1px solid #E0E0E0; padding-left: 44px;"}) do |f| %>
    <div style="text-align: center">
      <div style="margin: auto;"><%= f.label :email, :style => "font-family: PTMono-Regular; color: #C9C9C9; margin-top: 20px; float: left" %></div>
      <div><%= f.email_field :email, :value =>  @email, autofocus: true, :style => "color: #808080; height: 39px; font-size: 20px; margin: 0 auto" %></div>
    </div>
    <br />
    <div style="margin-bottom: 42px; margin-left: 3px;"><%= link_to "Change password", change_password_path, 'data-no-turbolink' => true %></div>
    <br />
    <div style="text-align: center">
      <%= button_tag(type: 'submit', class: "ladda-button", 'data-style' => "zoom-out", :style=> "font-family: 'Montserrat', Arial, Helvetica, sans-serif;
        border-radius: 10px;
        width: 100%;
        border: #fbfbfb solid 4px;
        cursor:pointer;
        background-color: #3498db;
        color:white;
        font-size:24px;
        padding-top:8px;
        padding-bottom:8px;
        -webkit-transition: all 0.3s;
        -moz-transition: all 0.3s;
        transition: all 0.3s;
          margin-top:-4px;
          font-weight:100;") do %>
        <span class="ladda-label">Update</span>
      <% end %>
  <% end %>
</div>
<%=javascript_include_tag "ladda.min.js", "spin.min.js" %>
<script>
  $(document).ready(function() { 
    Ladda.bind( '.ladda-button' );
    
  });
</script>